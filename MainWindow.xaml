<Window x:Class="BackupApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackupApp"
        xmlns:ff="clr-namespace:FolderFile;assembly=FolderFileLib"
        mc:Ignorable="d"
        Title="Backomat" Height="450" Width="825">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Path for Backups:" Margin="10,5,10,0"/>
        <ff:FolderPicker Grid.Row="1" Folder="{Binding BackupFolder,
            Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <ListBox Grid.Row="2" SelectedIndex="{Binding BackupItemsIndex,Mode=TwoWay,
                 UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding BackupItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="200"/>
                            <ColumnDefinition Width="*" MinWidth="500"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=LostFocus}" Margin="5"/>
                        <ff:FolderPicker Grid.Column="1" Folder="{Binding Folder,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="3" Grid.Row="0" Content="Add" HorizontalAlignment="Left" 
                    Margin="5" Width="100" Click="btnAdd_Click"/>
            <Button Grid.Column="4" Grid.Row="0" Content="Remove" HorizontalAlignment="Left" 
                    Margin="5" Width="100" Click="btnRemove_Click"/>

            <Button Grid.Column="0" Grid.Row="0" Content="Change times"
                    Width="100" Margin="5" Click="btnChangeTimes_Click"/>
            <Button Grid.Column="1" Grid.Row="0" Content="Backup now"
                    Width="100" Margin="5" Click="btnBackupNow_Click"/>
        </Grid>
        
        <Grid Grid.Row="4" Background="LightGray" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Margin="5,2" Text="Next Backup:"/>
            <TextBlock Grid.Column="1" Margin="0,2" Text="{Binding NextBackupDateTimeWithIntervalText}"/>
            <TextBlock Grid.Column="3" Margin="0,2" Text="Latest Backup:"/>
            <TextBlock Grid.Column="4" Margin="5,2" Text="{Binding LatestBackupDateTimeText}"/>
        </Grid>
    </Grid>
</Window>
